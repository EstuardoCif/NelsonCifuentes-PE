<div class="container mt-5">
    <link rel="stylesheet" href="https://bootswatch.com/5/superhero/bootstrap.min.css">
    <div class="row">
        <div class="cold-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="marca" placeholder="Marca" value="<%= data.marca %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="modelo" placeholder="Modelo" value="<%= data.modelo %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="año" placeholder="Año" value="<%= data.año %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="placa" placeholder="Placa" value="<%= data.placa %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado" placeholder="Estado" value="<%= data.estado %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            ACTUALIZAR VEHÍCULO
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>